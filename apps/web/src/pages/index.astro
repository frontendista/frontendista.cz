---
import HMFLayout from "~/layouts/hmf-layout.astro";

import { ContactForm } from "~/components/form/contact-form";
import { Toaster } from "~/components/form/radix/toast";

import IndexSpritesheet from "~/assets/svg/spritesheet/index.astro";

import HeroSection from "./_index/hero-section.astro";
import ProjectSection from "./_index/project-section.astro";
import AboutSection from "./_index/about-section.astro";
import ContactSection from "./_index/contact-section.astro";

import { CLIENT_EVENT_TOASTER } from "../config";
---

<HMFLayout>
	<IndexSpritesheet slot="body_start" />
	<HeroSection />
	<AboutSection />
	<ProjectSection />
	<ContactSection>
		<ContactForm client:visible />
	</ContactSection>

	<Toaster client:event={CLIENT_EVENT_TOASTER} />
</HMFLayout>

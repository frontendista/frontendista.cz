---
export interface Props {
	/**
	 * @default "h1"
	 */
	as: "h1" | "h2" | "h3" | "h4" | "h5" | "h6";
	href?: string;
}

const { as: Element = "h1", href, class: className, ...attrs } = Astro.props;
---

<Element class="inline-flex items-center justify-between gap-lg" class:list={["w-full", className]} {...attrs}>
	<slot />
	{href ? (
		<a class="min-h-[3rem] min-w-[3rem] center" href={href}>
			<span class="sr-only">Permalink to "{<slot />}" section</span>
			<span aria-hidden="true">#</span>
		</a>
	) : null}
</Element>

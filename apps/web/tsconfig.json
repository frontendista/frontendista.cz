{
	"extends": "astro/tsconfigs/strictest",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"~/layouts/*": ["./src/layouts/*"],
			"~/root/*": ["./*"],
			"~/styles/*": ["./src/styles/*"],
			"~/types/*": ["./src/types/*"],
			"~/components/*": ["./src/components/*"],
			"~/assets/*": ["./src/assets/*"],
			"~/mocks/*": ["./src/mocks/*"]
		}
	},
	"include": ["astro.config.ts", "tailwind.config.ts", "./src/**/*.ts", "./src/**/*.tsx", "./src/**/*.astro"]
}
